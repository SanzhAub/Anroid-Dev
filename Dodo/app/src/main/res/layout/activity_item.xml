<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemActivity"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/item_list_image_one"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/p1"
        android:scaleType="center" />

    <TextView
        android:id="@+id/item_list_title_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="Text"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_list_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="TextView"
        android:textSize="17sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#E9EDF1">
    <TextView
        android:id="@+id/item_list_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="Маленькая            Средняя             Большая"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_list_price_one"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corner_view"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Text"
        android:textAlignment="center"
        android:textColor="#f57c00"
        android:textSize="17sp" />

    <!--<Button
        android:id="@+id/button_buy"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:backgroundTint="#f57c00"
        android:text="КУПИТЬ 2000 KZT"
        android:textSize="18sp"
        android:textStyle="bold" />-->

</LinearLayout>